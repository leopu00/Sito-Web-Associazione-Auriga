---
const { title = "Auriga" } = Astro.props;
import "../styles/global.css";
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/LOGO-1.svg" />
  </head>
  <body class="min-h-screen flex flex-col bg-black text-white">
    <header class="border-b border-slate-800 bg-black text-white">
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center h-full">
          <img src="/LOGO-1.svg" alt="Auriga Logo" class="h-full" />
        </a>
        <nav class="flex gap-6 text-sm">
          <a href="/chi-siamo" class="hover:underline">Chi siamo</a>
          <a href="/formazione" class="hover:underline">Formazione</a>
          <a href="/teatro" class="hover:underline">Teatro</a>
          <a href="/poesia" class="hover:underline">Poesia</a>
          <a href="/arteterapia" class="hover:underline">Arteterapia</a>
          <a href="/eventi" class="hover:underline">Eventi</a>
          <a href="/contatti" class="hover:underline">Contatti</a>
        </nav>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-slate-800 bg-black text-slate-300">
      <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-slate-400">
        © {new Date().getFullYear()} Associazione Auriga — Tutti i diritti riservati
      </div>
    </footer>
  </body>
</html>