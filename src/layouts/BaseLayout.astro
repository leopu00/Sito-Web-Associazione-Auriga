---
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro';

const { title = "Auriga", headerTheme = "light", pageNamespace = "page", pageClass = "", pageBg = "light", pageBgColor = "", headerClass = "bg-[#faf7f2]", headerStyle = "", footerTheme = "light", footerClass = "", footerStyle = "" } = Astro.props;
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/LOGO-2.svg" />
    <link rel="stylesheet" href="/MyWebfontsKit.css" />
    <link rel="preload" href="/webFonts/WaldorfschriftRegular/font.woff2" as="font" type="font/woff2" crossorigin>
  </head>
  <style is:global>
    header nav a,
    h1,
    h2,
    h3 {
      font-family: "WaldorfschriftRegular", serif;
      font-weight: normal;
    }
  </style>
  <body class={`min-h-screen flex flex-col ${pageBg === "dark" ? "bg-black text-white" : "bg-[#faf7f2] text-black"}`} style={pageBgColor ? `background-color:${pageBgColor}` : ""}>
    <header class={`sticky top-0 z-50 border-b ${headerTheme === "dark" ? "border-slate-800 text-white" : "border-slate-200 text-black"} ${headerClass}`} style={headerStyle}>
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center h-full">
          <img src="/LOGO-2.svg" alt="Auriga Logo" class="h-full" />
        </a>
        <nav class="flex gap-6 text-sm">
          <a href="/" class="hover:underline">Auriga</a>
          <a href="/chi-siamo" class="hover:underline">Chi siamo</a>
          <a href="/formazione" class="hover:underline">Formazione</a>
          <a href="/teatro" class="hover:underline">Teatro</a>
          <a href="/poesia" class="hover:underline">Poesia</a>
          <!-- <a href="/arteterapia" class="hover:underline">Arteterapia</a> -->
          <!-- <a href="/eventi" class="hover:underline">Eventi</a> -->
          <a href="/contatti" class="hover:underline">Contatti</a>
        </nav>
      </div>
    </header>

    <main class={`flex-1 min-h-screen ${pageClass}`} data-page-bg={pageBg}>
      <slot />
    </main>

    <footer class={`border-t ${footerTheme === "dark" ? "border-slate-800 bg-black text-slate-300" : "border-slate-200 bg-white text-black"} ${footerClass}`} style={footerStyle}>
      <div class="max-w-6xl mx-auto px-4 py-10 text-sm text-gray-700 grid grid-cols-[1fr_1.5fr_1fr] gap-6 items-start">
        <div class="flex flex-col items-center text-left space-y-2">
          <p class="text-xs text-gray-600 font-semibold">Contatti</p>
          <div class="flex items-center gap-2 text-xs text-gray-600">
            <a href="mailto:info.sprachgestaltung@gmail.com">✉️ info.sprachgestaltung@gmail.com</a>
          </div>
        </div>
        <div class="flex flex-col items-center text-center space-y-6">
          <nav class="flex flex-wrap justify-center gap-x-3 gap-y-1 text-xs text-gray-600">
            <a href="/" class="underline">Home</a>
            <span>•</span>
            <a href="/chi-siamo" class="underline">Chi&nbsp;siamo</a>
            <span>•</span>
            <a href="/formazione" class="underline">Formazione</a>
            <span>•</span>
            <a href="/teatro" class="underline">Teatro</a>
            <span>•</span>
            <a href="/poesia" class="underline">Poesia</a>
            <span>•</span>
            <a href="/contatti" class="underline">Contatti</a>
          </nav>

          <p class="text-sm font-semibold">© {new Date().getFullYear()} APS Auriga</p>

          <nav class="flex flex-wrap justify-center gap-x-3 gap-y-1 text-xs text-gray-600">
            <a href="/privacy" class="underline">Privacy Policy</a>
            <span>•</span>
            <a href="/cookie-policy" class="underline">Cookie Policy</a>
          </nav>
        </div>

        <div class="text-center">
          <div class="text-xs text-gray-600 mb-2 font-semibold">In collaborazione con</div>
          <div class="grid grid-cols-1 grid-rows-3 gap-3 justify-center items-center">
            <div class="flex items-center justify-center">
              <img src="/img/sapienza-logo.png" alt="Sapienza" class="h-12 md:h-14 w-auto filter grayscale" />
            </div>
            <div class="flex items-center justify-center">
              <img src="/img/logo-culturasi.svg" alt="Fondazione Culturasi" class="h-12 md:h-14 w-auto filter grayscale" />
            </div>
            <div class="flex items-center justify-center">
              <img src="/img/accademia-aldo-bargero.jpg" alt="Accademia Aldo Bargero" class="h-12 md:h-14 w-auto filter grayscale rounded" />
            </div>
          </div>
        </div>
      </div>
    </footer>
    {import.meta.env.PROD && <Analytics />}
  </body>
</html>
