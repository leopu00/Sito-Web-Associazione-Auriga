---
const { title = "Auriga", headerTheme = "light", pageNamespace = "page", pageClass = "", pageBg = "light", headerClass = "bg-[#faf7f2]", headerStyle = "" } = Astro.props;
import "../styles/global.css";
---

<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/LOGO-2.svg" />
  </head>
  <body class={`min-h-screen flex flex-col ${pageBg === "dark" ? "bg-black text-white" : "bg-[#faf7f2] text-black"}`}>
    <header class={`sticky top-0 z-50 border-b ${headerTheme === "dark" ? "border-slate-800 text-white" : "border-slate-200 text-black"} ${headerClass}`} style={headerStyle}>
      <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center h-full">
          <img src="/LOGO-2.svg" alt="Auriga Logo" class="h-full" />
        </a>
        <nav class="flex gap-6 text-sm">
          <a href="/chi-siamo" class="hover:underline">Chi siamo</a>
          <a href="/formazione" class="hover:underline">Formazione</a>
          <a href="/teatro" class="hover:underline">Teatro</a>
          <a href="/poesia" class="hover:underline">Poesia</a>
          <!-- <a href="/arteterapia" class="hover:underline">Arteterapia</a> -->
          <!-- <a href="/eventi" class="hover:underline">Eventi</a> -->
          <a href="/contatti" class="hover:underline">Contatti</a>
        </nav>
      </div>
    </header>

    <main class={`flex-1 min-h-screen ${pageClass}`} data-page-bg={pageBg}>
      <slot />
    </main>

    <footer class={`border-t ${pageBg === "dark" ? "border-slate-800 bg-black text-slate-300" : "border-slate-200 bg-[#faf7f2] text-black"}`}>
      <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-slate-400">
        © {new Date().getFullYear()} Associazione Auriga — Tutti i diritti riservati
      </div>
    </footer>
  </body>
</html>