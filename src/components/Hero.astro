---
const {
  title = "Associazione Auriga",
  subtitle = "Cultura e formazione: corsi, teatro, poesia, eventi.",
  ctaPrimary = { href: "/eventi", label: "Prossimi eventi" },
  ctaSecondary = { href: "/corsi", label: "Scopri i corsi" },
  image = "/img/nasa-auriga.jpg",
  imageAlt = "Attivit√† dell'Associazione Auriga"
} = Astro.props;
---
<section class="relative overflow-hidden">
  <img src={image} alt={imageAlt} class="absolute inset-0 w-full h-full object-cover opacity-25" />
  <div class="relative max-w-6xl mx-auto px-4 py-20 md:py-28">
    <h1 class="text-4xl md:text-6xl font-bold tracking-tight">{title}</h1>
    <p class="mt-4 text-lg md:text-xl text-slate-700 max-w-2xl">{subtitle}</p>
    <div class="mt-8 flex gap-3">
      <a href={ctaPrimary.href} class="px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors duration-200">{ctaPrimary.label}</a>
      <a href={ctaSecondary.href} class="px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors duration-200">{ctaSecondary.label}</a>
    </div>
  </div>
</section>