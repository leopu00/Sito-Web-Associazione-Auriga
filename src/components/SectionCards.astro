---
const sections = [
  { href: "/corsi",   title: "Corsi",  text: "Formazione culturale e sportiva con docenti qualificati.", img: "/img/tempesta-quartetto.jpg" },
  { href: "/teatro",  title: "Teatro", text: "Laboratori, performance e percorsi di teatro sociale.",   img: "/img/tempesta-continua.jpg" },
  { href: "/poesia",  title: "Poesia", text: "Letture, workshop e progetti di scrittura creativa.",    img: "/img/tempesta-chiara.jpg" },
  { href: "/eventi",  title: "Eventi", text: "Calendario aggiornato di iniziative culturali e sportive.", img: "/img/tempesta-passegino.jpg" },
];
---

<section class="max-w-6xl mx-auto px-4 py-12 md:py-16 space-y-16">
  {sections.map((s, i) => {
    const imgOrder = i % 2 ? 'md:order-2' : 'md:order-1';
    const textOrder = i % 2 ? 'md:order-1' : 'md:order-2';
    return (
      <div class="grid gap-6 md:gap-10 md:grid-cols-2 items-center">
        <!-- Image -->
        <div class={imgOrder}>
          <a href={s.href}>
            <img src={s.img} alt={s.title} class="w-full h-64 md:h-80 object-cover rounded-lg" />
          </a>
        </div>

        <!-- Text -->
        <div class={textOrder}>
          <h2 class="text-3xl font-bold">
            <a href={s.href} class="hover:underline">{s.title}</a>
          </h2>
          <p class="mt-3 text-slate-300 max-w-2xl">{s.text}</p>
          <a href={s.href} class="mt-6 inline-block px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors">
            Scopri di pi√π
          </a>
        </div>
      </div>
    );
  })}
</section>