---
const cards = [
  { href: "/corsi",   title: "Corsi",  text: "Formazione culturale.", img: "/img/sapienzacorso2.jpg" },
  { href: "/eventi",  title: "Eventi", text: "Calendario aggiornato delle attivit√†.", img: "/img/foto.jpg" },
  { href: "/teatro",  title: "Teatro", text: "Laboratori e spettacoli.", img: "/img/tempesta-continua.jpg" },
];
---
<section class="max-w-6xl mx-auto px-4 py-12 md:py-16">
  <div class="grid gap-6 md:grid-cols-3">
    {cards.map(card => (
      <a href={card.href} class="group border rounded-lg overflow-hidden hover:shadow transition">
        <img src={card.img} alt={card.title} class="w-full h-40 object-cover" />
        <div class="p-4">
          <h3 class="text-xl font-semibold group-hover:underline">{card.title}</h3>
          <p class="mt-1 text-slate-600">{card.text}</p>
        </div>
      </a>
    ))}
  </div>
</section>