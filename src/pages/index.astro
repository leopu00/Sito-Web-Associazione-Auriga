---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Auriga — Benvenuti"
  headerTheme="light"
  headerClass="bg-white"
  headerStyle="background-color:white"
  pageBgColor="#ffffff"
>
  <section class="relative overflow-hidden text-white hero-section">
    <!-- Background base blu scuro -->
    <div class="absolute inset-0 bg-[#013a7a]"></div>

    <!-- BORDO SINISTRO -->
    <div class="absolute top-[0%] left-[-15%] w-[45%] h-[30%] rounded-full bg-[#4FC3F7] opacity-75 blur-[120px]"></div>
    <div class="absolute top-[20%] left-[-10%] w-[40%] h-[25%] rounded-full bg-[#0284c7] opacity-70 blur-[110px]"></div>
    <div class="absolute top-[40%] left-[-12%] w-[42%] h-[28%] rounded-full bg-[#29B6F6] opacity-65 blur-[115px]"></div>
    <div class="absolute top-[60%] left-[-8%] w-[38%] h-[25%] rounded-full bg-[#0369a1] opacity-65 blur-[110px]"></div>
    <div class="absolute top-[80%] left-[-15%] w-[45%] h-[30%] rounded-full bg-[#0ea5e9] opacity-70 blur-[120px]"></div>

    <!-- BORDO DESTRO -->
