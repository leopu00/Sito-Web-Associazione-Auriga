---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Auriga — Benvenuti">
  <!-- HERO full-screen con parallax e gradiente verso il nero -->
  <section
    class="relative min-h-screen flex items-center justify-center text-white"
    style="
      background-image: url('/img/nasa-auriga.jpg');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center 44px;
      background-attachment: fixed;
      background-color: black;
    "
  >
    <!-- sfumatura verso nero per stacco morbido -->
    <div class="absolute inset-x-0 bottom-0 h-48 pointer-events-none bg-gradient-to-b from-transparent to-black"></div>

    <h1 class="relative z-10 text-5xl md:text-7xl font-extrabold drop-shadow">
      Associazione Auriga
    </h1>
  </section>

  <!-- Sezione formazione: parte “nascosta”, si rivela salendo -->
  <section id="formazione" class="bg-black">
    <div class="max-w-6xl mx-auto px-4 py-20">
      <div class="border-2 border-white rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-10 items-center reveal">
          <img
            src="/img/corso-sapienza-trim3.jpg"
            alt="formazione Auriga"
            class="w-full h-64 md:h-96 object-cover rounded-lg"
          />
          <div>
            <h2 class="text-3xl md:text-4xl font-bold">Formazione</h2>
            <p class="mt-3 text-slate-300">
              Percorsi di Arte della Parola e Drammaturgia con docenti specializzati. Formazione triennale e corsi intensivi per sviluppare competenze artistiche e interpretative.
            </p>
            <a
              href="/formazione"
              class="mt-6 inline-block px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors"
            >
              Scopri di più
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="teatro" class="bg-black">
    <div class="max-w-6xl mx-auto px-4 py-20">
      <div class="border-2 border-white rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-10 items-center reveal">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold">Teatro</h2>
            <p class="mt-3 text-slate-300">
              Spettacoli e laboratori teatrali per tutte le età.
            </p>
            <a
              href="/teatro"
              class="mt-6 inline-block px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors"
            >
              Scopri di più
            </a>
          </div>
          <img
            src="/img/tempesta-quartetto.jpg"
            alt="Teatro Auriga"
            class="w-full h-64 md:h-96 object-cover rounded-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <section id="poesia" class="bg-black">
    <div class="max-w-6xl mx-auto px-4 py-20">
      <div class="border-2 border-white rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-10 items-center reveal">
          <img
            src="/img/tempesta-chiara.jpg"
            alt="Poesia Auriga"
            class="w-full h-64 md:h-96 object-cover rounded-lg"
          />
          <div>
            <h2 class="text-3xl md:text-4xl font-bold">Poesia</h2>
            <p class="mt-3 text-slate-300">
              Incontri, reading e corsi di scrittura poetica.
            </p>
            <a
              href="/poesia"
              class="mt-6 inline-block px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors"
            >
              Scopri di più
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="eventi" class="bg-black">
    <div class="max-w-6xl mx-auto px-4 py-20">
      <div class="border-2 border-white rounded-lg p-6">
        <div class="grid md:grid-cols-2 gap-10 items-center reveal">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold">Eventi</h2>
            <p class="mt-3 text-slate-300">
              Eventi culturali, conferenze e attività speciali.
            </p>
            <a
              href="/eventi"
              class="mt-6 inline-block px-5 py-3 border border-white text-white rounded hover:bg-white hover:text-black transition-colors"
            >
              Scopri di più
            </a>
          </div>
          <img
            src="/img/tempesta-passegino.jpg"
            alt="Eventi Auriga"
            class="w-full h-64 md:h-96 object-cover rounded-lg"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Stili per l'effetto reveal -->
  <style is:global>
    header {
      position: sticky;
      top: 0;
      z-index: 50;
    }
    .reveal {
      opacity: 0;
      transform: translateY(48px);
      transition: opacity .7s ease, transform .7s ease;
      will-change: opacity, transform;
    }
    .reveal.in-view {
      opacity: 1;
      transform: none;
    }
  </style>

  <!-- Script: accende la reveal quando entra in viewport -->
  <script>
    const io = new IntersectionObserver(
      (entries) => {
        entries.forEach((e) => {
          if (e.isIntersecting) {
            e.target.classList.add('in-view');
            // se vuoi animare una volta sola, smetti di osservare
            io.unobserve(e.target);
          }
        });
      },
      { threshold: 0.15 }
    );
    document.querySelectorAll('.reveal').forEach((el) => io.observe(el));
  </script>
</BaseLayout>