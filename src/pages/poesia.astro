---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Poesia — Auriga" headerTheme="light" headerClass="bg-white" headerStyle="background-color:white" pageNamespace="poesia" pageClass="text-black" pageBg="light" pageBgColor="#ffffff">
  <section class="relative overflow-hidden text-white">
    <!-- Background base verde foresta -->
    <div class="absolute inset-0 bg-[#064e3b]"></div>

    <!-- BORDO SINISTRO -->
    <div class="absolute top-[0%] left-[-15%] w-[45%] h-[30%] rounded-full bg-[#14b8a6] opacity-80 blur-[120px]"></div>
    <div class="absolute top-[20%] left-[-10%] w-[40%] h-[25%] rounded-full bg-[#10b981] opacity-75 blur-[110px]"></div>
    <div class="absolute top-[40%] left-[-12%] w-[42%] h-[28%] rounded-full bg-[#06b6d4] opacity-70 blur-[115px]"></div>
    <div class="absolute top-[60%] left-[-8%] w-[38%] h-[25%] rounded-full bg-[#22c55e] opacity-65 blur-[110px]"></div>
    <div class="absolute top-[80%] left-[-15%] w-[45%] h-[30%] rounded-full bg-[#0d9488] opacity-70 blur-[120px]"></div>

    <!-- BORDO DESTRO -->
    <div class="absolute top-[0%] right-[-15%] w-[45%] h-[30%] rounded-full bg-[#34d399] opacity-80 blur-[120px]"></div>
    <div class="absolute top-[18%] right-[-10%] w-[40%] h-[25%] rounded-full bg-[#2dd4bf] opacity-75 blur-[110px]"></div>
    <div class="absolute top-[38%] right-[-12%] w-[42%] h-[28%] rounded-full bg-[#059669] opacity-70 blur-[115px]"></div>
    <div class="absolute top-[58%] right-[-8%] w-[38%] h-[25%] rounded-full bg-[#4ade80] opacity-65 blur-[110px]"></div>
    <div class="absolute top-[78%] right-[-15%] w-[45%] h-[30%] rounded-full bg-[#0891b2] opacity-70 blur-[120px]"></div>

    <!-- CENTRO - HERO -->
    <div class="absolute top-[-5%] left-[25%] w-[50%] h-[35%] rounded-full bg-[#10b981] opacity-70 blur-[120px]"></div>
    <div class="absolute top-[0%] left-[35%] w-[45%] h-[30%] rounded-full bg-[#6ee7b7] opacity-65 blur-[110px]"></div>
    <div class="absolute top-[5%] left-[15%] w-[40%] h-[28%] rounded-full bg-[#14b8a6] opacity-70 blur-[100px]"></div>
    <div class="absolute top-[5%] left-[50%] w-[40%] h-[28%] rounded-full bg-[#22d3ee] opacity-75 blur-[100px]"></div>
    <div class="absolute top-[10%] left-[30%] w-[45%] h-[30%] rounded-full bg-[#34d399] opacity-60 blur-[110px]"></div>
    <div class="absolute top-[8%] left-[30%] w-[40%] h-[30%] rounded-full bg-[#84cc16] opacity-75 blur-[90px]"></div>
    <div class="absolute top-[3%] left-[45%] w-[35%] h-[25%] rounded-full bg-[#a3e635] opacity-65 blur-[85px]"></div>
    <div class="absolute top-[15%] left-[45%] w-[35%] h-[25%] rounded-full bg-[#059669] opacity-55 blur-[100px]"></div>
    <div class="absolute top-[18%] left-[35%] w-[40%] h-[28%] rounded-full bg-[#2dd4bf] opacity-60 blur-[105px]"></div>

    <!-- CENTRO - MIDDLE -->
    <div class="absolute top-[28%] left-[15%] w-[40%] h-[28%] rounded-full bg-[#0d9488] opacity-60 blur-[110px]"></div>
    <div class="absolute top-[30%] left-[45%] w-[38%] h-[26%] rounded-full bg-[#6ee7b7] opacity-65 blur-[110px]"></div>
    <div class="absolute top-[35%] left-[30%] w-[40%] h-[28%] rounded-full bg-[#22c55e] opacity-55 blur-[110px]"></div>
    <div class="absolute top-[40%] left-[20%] w-[35%] h-[25%] rounded-full bg-[#06b6d4] opacity-60 blur-[100px]"></div>
    <div class="absolute top-[42%] left-[50%] w-[35%] h-[25%] rounded-full bg-[#4ade80] opacity-55 blur-[100px]"></div>

    <!-- CENTRO - BOTTOM -->
    <div class="absolute top-[50%] left-[25%] w-[40%] h-[28%] rounded-full bg-[#14b8a6] opacity-60 blur-[110px]"></div>
    <div class="absolute top-[55%] left-[40%] w-[38%] h-[26%] rounded-full bg-[#10b981] opacity-55 blur-[110px]"></div>
    <div class="absolute top-[60%] left-[15%] w-[42%] h-[28%] rounded-full bg-[#0891b2] opacity-60 blur-[115px]"></div>
    <div class="absolute top-[65%] left-[45%] w-[40%] h-[28%] rounded-full bg-[#34d399] opacity-55 blur-[110px]"></div>
    <div class="absolute top-[70%] left-[25%] w-[45%] h-[30%] rounded-full bg-[#22d3ee] opacity-55 blur-[115px]"></div>
    <div class="absolute top-[75%] left-[35%] w-[40%] h-[28%] rounded-full bg-[#047857] opacity-50 blur-[110px]"></div>
    <div class="absolute top-[82%] left-[20%] w-[45%] h-[30%] rounded-full bg-[#84cc16] opacity-50 blur-[115px]"></div>
    <div class="absolute top-[88%] left-[40%] w-[40%] h-[28%] rounded-full bg-[#0d9488] opacity-55 blur-[110px]"></div>

    <!-- Hero content -->
    <div class="relative z-10 min-h-[380px] md:min-h-[440px] flex items-center justify-center">
      <div class="max-w-3xl mx-auto px-6 py-24 md:py-28 text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight drop-shadow-lg">Poesia</h1>
      </div>
    </div>

    <!-- Cards section -->
    <div class="relative z-10 pb-16 md:pb-20">
      <div class="max-w-6xl mx-auto px-4">
        <div class="auriga-card-stack">
          <!-- Card: Premio Paolo Giuranna -->
          <article class="auriga-card-surface">
            <div class="grid md:grid-cols-2 gap-10 items-center reveal">
              <img
                src="/img/premio-paolo-giuranna/_MG_0518.JPG"
                alt="Premio Paolo Giuranna"
                class="w-full h-64 md:h-96 object-cover rounded-lg"
                loading="lazy"
                decoding="async"
              />
              <div>
                <h2 class="text-3xl md:text-4xl font-bold">Premio Paolo Giuranna</h2>
                <p class="mt-3 text-gray-700">
                  Concorso annuale per giovani interpreti (18–32) di poesia lirica, promosso da Auriga con partner istituzionali. Selezioni e finale si svolgono a marzo.
                </p>
                <a
                  href="/poesia/premio-paolo-giuranna"
                  class="mt-6 inline-block px-5 py-3 border border-black text-black rounded hover:bg-black hover:text-white transition-colors"
                >
                  Maggiori informazioni
                </a>
              </div>
            </div>
          </article>

          <!-- Card: La Città della Poesia -->
          <article class="auriga-card-surface">
            <div class="grid md:grid-cols-2 gap-10 items-center reveal">
              <div>
                <h2 class="text-3xl md:text-4xl font-bold">La Città della Poesia</h2>
                <p class="mt-3 text-gray-700">
                  Poesia ad alta voce: attori e musicisti danno vita a testi lirici di poeti del '900 e contemporanei.
                </p>
                <a
                  href="/poesia/citta-della-poesia"
                  class="mt-6 inline-block px-5 py-3 border border-black text-black rounded hover:bg-black hover:text-white transition-colors"
                >
                  Maggiori informazioni
                </a>
              </div>
              <img
                src="/img/citta-della-poesia/_DSF5326.JPG"
                alt="La Città della Poesia"
                class="w-full h-64 md:h-96 object-cover rounded-lg"
                loading="lazy"
                decoding="async"
              />
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
