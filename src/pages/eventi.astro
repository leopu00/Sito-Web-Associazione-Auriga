                <div class="md:hidden">
                  <!-- Date/Location header -->
                  <div class="mb-4 pl-6 border-l-4 border-[#014f97]">
                    <p class="text-[11px] uppercase tracking-[0.35em] text-[#014f97] font-semibold">{item.category}</p>
