  ...pastEvents.map((event) => buildTimelineEvent(event, "past")),
];
---

<BaseLayout
  title="Eventi — Auriga"
  headerTheme="light"
  headerClass="bg-[#faf7f2]"
  headerStyle="background-color:#faf7f2"
  pageBg="light"
>
  <section class="relative min-h-[360px] flex items-center justify-center overflow-hidden bg-[#014f97] text-white">
    <div class="absolute inset-0 bg-gradient-to-br from-[#012b5c] via-[#014f97] to-[#021b45]"></div>
    <div class="absolute left-1/2 top-[-220px] h-[460px] w-[460px] -translate-x-1/2 rounded-full bg-[radial-gradient(circle,_rgba(159,210,255,0.45),_rgba(1,79,151,0))] opacity-90"></div>
    <div class="absolute right-[12%] top-[18%] h-56 w-56 rounded-full bg-[radial-gradient(circle,_rgba(255,255,255,0.22),_rgba(1,43,92,0))] opacity-90 blur-2xl"></div>
    <div class="absolute left-[8%] bottom-[-140px] h-80 w-80 rounded-full bg-[radial-gradient(circle,_rgba(2,28,67,0.65),_rgba(1,79,151,0))] opacity-70 blur-3xl"></div>
    <div class="relative z-10 max-w-3xl mx-auto px-6 py-24 text-center">
      <h1 class="text-4xl md:text-5xl font-semibold">Eventi</h1>
    </div>
    <div class="pointer-events-none absolute -bottom-20 h-20 w-full bg-gradient-to-b from-transparent via-[#033b7a]/80 to-[#014f97] md:-bottom-28 md:h-28"></div>
  </section>
  <section class="relative bg-[#014f97] py-16 md:py-20">
    <div class="absolute inset-0 bg-gradient-to-b from-[#014f97] via-[#023b7e] to-[#012b5c]"></div>
    <div class="relative max-w-6xl mx-auto px-4">
      <div class="rounded-[28px] border-2 border-black/40 bg-white/95 shadow-[0_35px_80px_rgba(0,0,0,0.35)] backdrop-blur-sm px-6 sm:px-10 py-12">
        <header class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
          <div>
            <h2 class="text-3xl md:text-4xl font-semibold text-[#014f97]">Prossimi eventi</h2>
            <p class="mt-4 text-slate-700 max-w-2xl">
              Qui trovi i prossimi eventi dell'Associazione Auriga.
            </p>
          </div>
        </header>

        <ol class="timeline list-none m-0 mt-12 p-0">
          {timelineItems.map((item) => {
            if (item.type === "divider") {
              return (
                <li class="timeline__divider" id={item.id}>
                  <div class="timeline__dividerInner">
                    <h2 class="timeline__dividerTitle">{item.title}</h2>
                    {item.description && (
                      <p class="timeline__dividerDescription">{item.description}</p>
                    )}
                  </div>
                </li>
              );
            }

            return (
              <li class={`timeline__item relative pb-16 md:pb-20 last:pb-0${item.isInverted ? " timeline__item--inverted" : ""}`}>
                <div class="timeline__date">
                  <p class="text-[11px] uppercase tracking-[0.4em] text-[#014f97] font-semibold">{item.category}</p>
                  <p class="mt-3 text-lg md:text-xl font-semibold text-slate-900 leading-tight">{item.date}</p>
                  <div class={`mt-2 text-sm text-slate-600 whitespace-pre-line${item.isInverted ? " md:text-left" : " md:text-right"}`}>
                    <span class="block font-medium text-slate-700">{item.location}</span>
                  </div>
                </div>
                <div class={`timeline__content mt-6 md:mt-0${item.isInverted ? " timeline__content--inverted" : " timeline__content--default"}`}>
                  <article class="group h-full overflow-hidden rounded-2xl border border-black/10 bg-white shadow-[0_25px_60px_rgba(1,49,97,0.18)] transition-transform duration-300 hover:-translate-y-1" id={item.id}>
                    <img src={item.image} alt={item.imageAlt} loading="lazy" class="h-56 w-full object-cover md:h-64" />
                    <div class="p-6 md:p-7">
                      <h3 class="text-2xl font-semibold text-[#014f97]">{item.title}</h3>
                      <p class="mt-4 text-slate-700 leading-relaxed">{item.description}</p>
                      <div class={`mt-6 flex justify-start${item.isInverted ? " md:justify-start" : " md:justify-end"}`}>
                        <a
                          href={item.ctaHref}
                          class="inline-flex items-center gap-2 rounded-full border border-[#014f97] px-5 py-2 text-sm font-semibold text-[#014f97] transition-colors hover:bg-[#014f97] hover:text-white focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#014f97] focus-visible:ring-offset-white"
                          aria-label={`Scopri di più su ${item.title}`}
                        >
                          Scopri di più
                          <span aria-hidden="true">→</span>
                        </a>
                      </div>
                    </div>
                  </article>
                </div>
                <span class="timeline__dot" aria-hidden="true"></span>
              </li>
            );
          })}
        </ol>
      </div>
    </div>
  </section>

  <style>
    .timeline {
      position: relative;
      padding-top: 0.5rem;
      --timeline-gap: clamp(1.5rem, 3vw, 2.35rem);
      --timeline-offset: clamp(0.8rem, 2.2vw, 1.4rem);
    }
    .timeline::before {
      content: "";
      position: absolute;
      top: 1.5rem;
      bottom: 1.5rem;
      left: 6rem;
      width: 2px;
      background: linear-gradient(180deg, rgba(1, 79, 151, 0.15), rgba(1, 79, 151, 0.65));
      pointer-events: none;
    }
    .timeline__item {
      position: relative;
      padding-left: 6.5rem;
    }
    .timeline__date {
      position: absolute;
      inset: 0 auto auto 0;
      width: 6rem;
      padding-right: var(--timeline-offset);
      text-align: right;
    }
    .timeline__content--default,
    .timeline__content--inverted {
      position: relative;
    }
    .timeline__dot {
      position: absolute;
      top: 2.75rem;
      left: 6rem;
      width: 1.1rem;
      height: 1.1rem;
      transform: translate(-50%, -50%);
      border-radius: 9999px;
      background: #014f97;
      border: 3px solid #ffffff;
      box-shadow: 0 0 0 6px rgba(1, 79, 151, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      z-index: 1;
    }
    .timeline__item:hover .timeline__dot {
      transform: translate(-50%, -50%) scale(1.1);
      box-shadow: 0 0 0 7px rgba(1, 79, 151, 0.22);
    }
    .timeline__divider {
      position: relative;
      padding: 2.5rem 0 3rem;
      text-align: left;
    }
    .timeline__dividerInner {
      position: relative;
      z-index: 1;
      max-width: 32rem;
    }
    .timeline__dividerTitle {
      margin: 0;
      font-size: 1.875rem;
      line-height: 1.25;
      font-weight: 600;
      color: #014f97;
    }
    .timeline__dividerDescription {
      margin-top: 1rem;
      margin-bottom: 0;
      font-size: 1rem;
      line-height: 1.6;
      color: #475569;
    }

    @media (min-width: 768px) {
      .timeline {
        padding-top: 1rem;
        --timeline-gap: clamp(1.9rem, 2vw + 0.8rem, 2.6rem);
        --timeline-offset: clamp(1rem, 1.6vw, 1.6rem);
      }
      .timeline::before {
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(180deg, rgba(1, 79, 151, 0.25), rgba(1, 79, 151, 0.7));
      }
      .timeline__item {
        padding-left: 0;
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
        column-gap: var(--timeline-gap);
      }
      .timeline__date {
        position: relative;
        width: auto;
        padding-right: var(--timeline-offset);
        max-width: 280px;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        justify-self: flex-end;
      }
      .timeline__content--default {
        padding-left: var(--timeline-offset);
        justify-self: flex-start;
      }
      .timeline__content--inverted {
        padding-right: var(--timeline-offset);
        justify-self: flex-end;
      }
      .timeline__dot {
        left: 50%;
        top: 3rem;
      }
      .timeline__item--inverted .timeline__date {
        order: 2;
        text-align: left;
        padding-right: 0;
        padding-left: var(--timeline-offset);
        align-items: flex-start;
        justify-self: flex-start;
      }
      .timeline__item--inverted .timeline__content {
        order: 1;
      }
      .timeline__divider {
        padding: 3rem 0 3.5rem;
      }
      .timeline__dividerInner {
        max-width: 36rem;
      }
      .timeline__dividerTitle {
        font-size: 2.125rem;
      }
      .timeline__dividerDescription {
        font-size: 1.05rem;
      }
    }

    @media (min-width: 1024px) {
      .timeline__item {
        column-gap: calc(var(--timeline-gap) + 0.25rem);
      }
      .timeline__date {
        padding-right: calc(var(--timeline-offset) + 0.5rem);
      }
      .timeline__item--inverted .timeline__date {
        padding-left: calc(var(--timeline-offset) + 0.5rem);
      }
      .timeline__content--default {
        padding-left: calc(var(--timeline-offset) + 0.5rem);
      }
      .timeline__content--inverted {
        padding-right: calc(var(--timeline-offset) + 0.5rem);
      }
      .timeline__dividerInner {
        max-width: 34rem;
        padding-left: 0;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .timeline__item,
      .timeline__dot {
        transition: none;
      }
    }
  </style>
</BaseLayout>
