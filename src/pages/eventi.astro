            if (item.type === "divider") {
              return (
                <li class="relative py-8 md:py-12" id={item.id}>
                  <div class="max-w-lg">
                    <h2 class="text-2xl md:text-3xl font-semibold text-[#014f97]">{item.title}</h2>
