---
import BaseLayout from "../layouts/BaseLayout.astro";

type EventEntry = {
  id: string;
  category: string;
  title: string;
  date: string;
  location: string;
  description: string;
  image: string;
  imageAlt: string;
  link?: string;
};

type TimelineScope = "upcoming" | "past";

type TimelineEventItem = EventEntry & {
  type: "event";
  scope: TimelineScope;
  positionIndex: number;
  isInverted: boolean;
  ctaHref: string;
};

type TimelineDividerItem = {
  type: "divider";
  id: string;
  title: string;
  description?: string;
};

type TimelineItem = TimelineEventItem | TimelineDividerItem;

